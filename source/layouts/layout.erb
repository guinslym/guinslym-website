<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title>
      <%= "Guinsly Mondésir - " if current_page.data.title != "Guinsly Mondésir" %><%= current_page.data.title %>
    </title>
    <meta name="description" content="<%= current_page.data.description %>">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <%= stylesheet_link_tag "all" %>
    <%= stylesheet_link_tag '//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css' %>
    <%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js' %>
    <%= javascript_include_tag 'all.js' %>
  </head>
  <body>
    <%= partial "partials/nav" %>
    <%= yield %>
    <%= partial "partials/footer" %>
  </body>
</html>
